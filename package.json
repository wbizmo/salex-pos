{
  "name": "salex-pos",
  "version": "0.1.0",
  "description": "Salex is a powerful self-hosted application that simplifies inventory management for businesses of all sizes.",
  "author": "Zivora Logic Technologies <zivoratechnologies@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "generate-icons": "node scripts/generate-icons.js",
    "dist": "npm run generate-icons && electron-builder --windows nsis"
  },
  "dependencies": {
    "is-online": "^9.0.0",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^24.0.0",
    "png-to-ico": "^2.1.4"
  },
  "build": {
    "appId": "com.zivora.salexpos",
    "productName": "Salex POS",
    "artifactName": "${productName} Setup ${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
